<div class="row">
  <div id="top" class="jumbotron col-md-10 col-md-offset-1">
    <%= link_to 'Create', new_product_path, :id => "create_btn",  :class => 'btn btn-lg btn-success'%>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <center><iframe src="//player.vimeo.com/video/86807850" width="100%" height="422" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></center>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
  <h1>Recent Models</h1>
  <%= paginate(@products) %>
  <% @products.each_with_index do |product, i| %>
    <% if i % 2 == 0 %>
      <div class="row">
    <% end %>
      <div class="col-md-6 item_box">
        <div class="item_box_img">
          <center><%= image_tag product.image.url %></center>
        </div>
      <div class="item_box_child">
        <h2><%= product.title %></h2>
        <%= link_to 'Show', product, :class => 'btn btn-primary' %>
      </div>
      </div>
      <% if i%2==1 || i+1 ==  @products.length %>
        </div>
      <% end %>
    <% end %>
    <%= paginate(@products) %>
  </div>
</div>